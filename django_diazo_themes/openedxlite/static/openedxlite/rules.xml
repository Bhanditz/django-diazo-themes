<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Nifty output settings -->
    <xsl:strip-space elements="*"/>
    <xsl:output method="xml" indent="yes" omit-xml-declaration="yes"/>

    <!-- We don't use a theme at all, just rules -->
      <notheme/>

    <xsl:variable name="ua-downgrade" select="//html/@data-ua-downgrade" />  

    <!-- drop the sequence tab navigation, but not the prev/next buttons -->
    <drop css:content=".sequence-nav nav" if="contains($ua-downgrade, 'courseware-tabs')"/> 

    <!-- make sure to hide inactive sequence contents  in IE9  -->
    <before css:content-children=".seq_contents" if="contains($ua-downgrade, 'courseware-tabs')" method="raw">
      <xsl:attribute name="style">display:none</xsl:attribute>
    </before>

   
        
  
</rules>
